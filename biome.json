{
	"$schema": "https://biomejs.dev/schemas/1.6.1/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"complexity": {
				"noBannedTypes": "off"
			},
			"correctness": {
				"noUnsafeOptionalChaining": "off"
			},
			"suspicious": {
				"noExplicitAny": "off"
			}
		},
		"ignore": [
			"*/example/*.ts"
		]
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": false,
		"indentStyle": "space",
		"indentWidth": 2,
		"lineWidth": 80,
		"lineEnding": "lf",
		"ignore": [
			"*/example/*.ts"
		]
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single"
		}
	}
}